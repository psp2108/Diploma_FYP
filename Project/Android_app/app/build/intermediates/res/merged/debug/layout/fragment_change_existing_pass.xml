<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background3"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.mark_attendance.mark_attendance.changeExistingPassFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/scrollview_margin"
        >

        <EditText
            android:id="@+id/existingpass_edittext_changeexistingpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Existing Password"
            android:inputType="textPassword"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/match_textview_changeexistingpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/existingpass_edittext_changeexistingpass"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text="Pass match ?"
            android:textSize="18sp"></TextView>
        <EditText
            android:id="@+id/pass_edittext_changeexistingpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/match_textview_changeexistingpass"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            />


        <EditText
            android:id="@+id/confpass_edittext_changeexistingpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pass_edittext_changeexistingpass"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/change_btn_changeexistingpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_margin="40dp"
            android:text="Change"
            android:textSize="17dp"
            android:background="@drawable/rounded_corner_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confpass_edittext_changeexistingpass" />

    </RelativeLayout>
</ScrollView>




