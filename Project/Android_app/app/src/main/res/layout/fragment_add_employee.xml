<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@drawable/background3"
    tools:context="com.example.mark_attendance.mark_attendance.addEmployeeFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/main_layout_margins"
            >

            <EditText
                android:id="@+id/firstname_edittext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:hint="First Name*"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/lastname_edittext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/firstname_edittext_addemp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:hint="Last Name*"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/psno_edittext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lastname_edittext_addemp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:ems="10"
                android:hint="PS Number/Roll number"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/email_edittext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/psno_edittext_addemp"
                android:ems="10"
                android:hint="Email-ID"
                android:inputType="textEmailAddress" />

            <Spinner
                android:id="@+id/dept_spinner_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/email_edittext_addemp"
                android:layout_centerHorizontal="true" />

            <RadioGroup
                android:id="@+id/gender_radiogroup_addemp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"

                android:layout_below="@+id/dept_spinner_addemp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <RadioButton
                    android:id="@+id/male_radiobutton_addemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:text="Male"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/female_radiobutton_addemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/other_radiobutton_addemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textSize="18dp" />
            </RadioGroup>
            <TextView
                android:id="@+id/gender_textview_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gender_radiogroup_addemp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Gender"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/dob_editdext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/gender_radiogroup_addemp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:editable="false"
                android:ems="10"
                android:hint="Date of birth"
                android:inputType="none" />
            <EditText
                android:id="@+id/hiredate_editdext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Hired Date"
                android:inputType="date"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/dob_editdext_addemp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:editable="false"
                android:layout_alignParentEnd="true" />
            <EditText
                android:id="@+id/hiredtill_editdext_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Hired Till"
                android:inputType="date"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/hiredate_editdext_addemp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:editable="false"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/next_button_addemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/hiredtill_editdext_addemp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:textColor="@color/textColor"
                android:text="Next"
                android:textSize="17dp"
                android:background="@drawable/rounded_corner_button"
                android:layout_margin="@dimen/button_margins"/>
        </RelativeLayout>
</ScrollView>

