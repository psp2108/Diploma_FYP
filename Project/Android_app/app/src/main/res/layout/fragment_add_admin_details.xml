<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background3">

    <RelativeLayout
        android:id="@+id/relativelayout_addadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/main_layout_margins">

        <EditText
            android:id="@+id/firstname_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="First Name*"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/lastname_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/firstname_edittext_addadmin"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Last Name*"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/lastname_edittext_addadmin"
            android:ems="10"
            android:hint="Email-ID*"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/gender_textview_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gender_radiogroup_addadmin"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Gender"
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/gender_radiogroup_addadmin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email_edittext_addadmin"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp">
            <RadioButton
                android:id="@+id/male_radiobutton_addadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:textSize="18dp" />
            <RadioButton
                android:id="@+id/female_radiobutton_addadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/other_radiobutton_addadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other"
                android:textSize="18dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/dob_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date of birth"
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/gender_radiogroup_addadmin"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/department_textview_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob_edittext_addadmin"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:text="Add new Institute"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/dept_spinner_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/department_textview_addadmin"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/deptname_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/dob_edittext_addadmin"
            android:layout_below="@+id/dob_edittext_addadmin"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Institute Code"
            android:inputType="textLongMessage" />

        <EditText
            android:id="@+id/deptdesc_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/deptname_edittext_addadmin"
            android:layout_below="@+id/deptname_edittext_addadmin"
            android:ems="10"
            android:hint="Institute Name"
            android:inputType="textLongMessage" />

        <EditText
            android:id="@+id/deptlocation_edittext_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/deptdesc_edittext_addadmin"
            android:layout_below="@+id/deptdesc_edittext_addadmin"
            android:ems="10"
            android:hint="Institute Location"
            android:inputType="textLongMessage" />


        <Button
            android:id="@+id/submit_button_addadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptlocation_edittext_addadmin"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColor"
            android:text="Submit"
            android:textSize="17dp"
            android:background="@drawable/rounded_corner_button"
            android:layout_margin="50dp" />

    </RelativeLayout>

</ScrollView>

