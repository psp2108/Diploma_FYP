<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mark_attendance.mark_attendance.enrollBiometricsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relativelayout_content_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/addemp_arduino_msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/biometric_image_enrollbiometrics"

            android:layout_centerHorizontal="true"
            android:text="Getting sensor ready..."
            android:textSize="24sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/biometric_image_enrollbiometrics"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_placefinger" />
        <Button
            android:id="@+id/submit_button_enrollbiometrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/biometric_image_enrollbiometrics"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColor"
            android:text="Submit"
            android:textSize="17dp"
            android:background="@drawable/rounded_corner_button"
            android:layout_margin="10dp"/>
    </RelativeLayout>

</FrameLayout>
